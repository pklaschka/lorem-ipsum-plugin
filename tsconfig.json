{
	"compilerOptions": {
		"strict": true,
		"target": "es2015",
		"noEmit": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"lib": ["dom", "es2015"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*", "types/**/*.d.ts"]
}
